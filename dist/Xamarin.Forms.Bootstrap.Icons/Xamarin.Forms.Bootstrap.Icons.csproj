<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>1.5.0</Version>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageIcon>icon.png</PackageIcon>
    <PackageIconUrl />
    <PackageTags>Xamarin.Forms, Bootstrap, Icons</PackageTags>
    <Authors>malexandersalazar</Authors>
    <Company />
    <PackageProjectUrl>https://github.com/malexandersalazar/Xamarin.Forms.Bootstrap.Icons</PackageProjectUrl>
    <RepositoryUrl>https://github.com/malexandersalazar/Xamarin.Forms.Bootstrap.Icons</RepositoryUrl>
    <Description>This project is an implementation of Bootstrap Icons for Xamarin.Forms.</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="bootstrap-icons.ttf" />
    <None Include="..\..\icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="bootstrap-icons.ttf" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Xamarin.Forms" Version="4.5.0.356" />
  </ItemGroup>

</Project>
